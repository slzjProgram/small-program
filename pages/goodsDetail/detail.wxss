}

.no_select {
  background-color: #f5f5f5;
  color: #ddd;
}

.calculate {
  color: #000;
}

.swiper-detail {
  position: fixed;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  height: 500rpx;
  width: 100%;
  z-index: 5000;
}

.swiper_item {
  animation: scaleImg 0.5s ease;
}

@keyframes scaleImg {
  0% {
    transform: scale(0.2);
    opacity: 0.2;
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.swiper_item-none {
  animation: scaleNoImg 0.5s ease;
}

@keyframes scaleNoImg {
  0% {
    transform: scale(1);
    opacity: 1;
  }

  100% {
    transform: scale(0);
    opacity: 0;
  }
}

.swiper-detail imgae {
  display: block;
  width: 100%;
}

.price-repertory_select {
  padding-right: 10rpx;
}
