/* pages/login/login.wxss */
page{
  height: 100%;
  width: 100%;
}
.container{
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2;
}
.me-title{
  height: 80px;
  width:100%;
  background-color: rgb(255, 255, 255);
}
.me-title view{
  float: left;
}
.me-title-image{
  width: 60px;
  height: 60px;
  margin-top:10px; 
  margin-left:20px;
  overflow:hidden;  
  display: block;  
   border-radius: 5px;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}
.me-title-nickname{
  margin: 20px;
}
.userIcon, .psdIcon{
  margin-left: 20rpx;
  margin-top:20rpx;
  height: 40rpx;
  width:40rpx;
}


.line {
  width: 100%;
  height: 1px;
  background-color: #cccccc;
  margin-top: 1px;
}

.formLogin{
  height: 100%;
  flex: auto;
  margin-top: 350rpx;
}

.row{
  background-color: #fff;
  line-height: 44px;
  width: 750rpx;
  padding-left: 20px;
}


.loginLab {
  margin-left: 10rpx;
  color: #545454;
  font-size: 30rpx;
}


.loginInput {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 66px;
  margin-top: 11px;
  color: black;
  font-size: 30rpx
}


.loginBtn{
  background-color: #0066ff;
  color: #fff;
  margin-top: 40rpx;
}
.row1{
  /* background-color: #fff; */
  line-height: 44px;
  display: inline-block;
  width: 750rpx;
  padding-left: 20px;
  text-align: center;
  font-size: 25rpx;
}
.register{
  color: blue;
}
