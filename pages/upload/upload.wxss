.panel_title{
  margin-bottom: 20rpx;
}
.ui_uploader_cell_other {
  width: 100%;
  padding: 40rpx 0;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  /* justify-content: flex-start; *//* align-items: center; */
}
 
.ui_uploader_cell {
  width: 100%;
  height: 800rpx;
  /* padding: 20rpx 0; */
  display: flex;
  /* justify-content: flex-start; */
  flex-wrap: wrap;
  align-content: flex-start;
}
 
.ui_uploader_item {
  width: 118rpx;
  height: 118rpx;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
  padding-bottom: 2rpx;
  padding-right: 2rpx;
  position: relative;
}
 
.title2 {
  width: 520rpx;
  display: flex;
  align-items: center;
}
 
.ui_uploader_item_icon {
  position: absolute;
  right: 0;
}
 
.ui_uploader {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0rpx 40rpx 0 rgba(0, 0, 0, 0.08);
}

.ui_img{
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.btn_view{
  width: 100%;
  margin-top: rpx;
  color: white;
  display:flex;
  bottom: 0;
  position: fixed;
  justify-content: center;
}

.upload_btn {
  width: 60%;
  margin-top: 20rpx;
  margin: 7px;
  background-color: #02e85e;
  color: white;
  border-radius: 98rpx;

  display:flex;
  bottom: 0;
  position: fixed;
  justify-content: center;
}

.text_view{
  background-color: white;
  color: #02e85e;
  /*border: 2rpx black solid;*/
  width: 100%;
  height: 100rpx;
  margin: 7px auto;
  display:block;
  text-align: center;
  line-height: 100rpx;
}

.input_view{
  background-color: white;
  color: #02e85e;
  border: 2rpx #02e85e solid;
  border-radius: 98rpx;
  width: 80%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.upload_btn2 {
  width: 60%;
  margin-top: 20rpx;
