.address {
  width: 100%;
  height: 100px;

}

.address-plus {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
 
  border: 2px;
  border-bottom: 2px greenyellow;
  background-color: rgba(255, 88, 10, 0.986);
}

.address-detail {
  padding: 20px;
}

.address-add {
  text-align: center；;
